@model IEnumerable<Application.Features.Products.Queries.GetProductList.GetPostsListViewModel>

@(Html.DevExtreme().DataGrid()
  .ID("gridContainer")
  .ShowBorders(true)
  .DataSource(Model)
  .KeyExpr("ID")
  .Columns(c => {
    c.Add().DataField("Name");
    c.Add().DataField("Description");
    c.Add().DataField("Price");
    c.Add().DataField("InStock");
  })
  )